<% @posts.each do |post| %>
  <section class="section">
    <div class="container">
      <div class="container columns is-mobile is-centered">
        <div class="column is-half box">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <%# <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image"> %>
                <%= image_tag current_user.avatar if current_user.avatar.attached? %>
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= current_user.first_name %></strong> <small>@<%= current_user.username %></small> <small>31m</small>
                  <br>
                  <%= post.title %>
                  <p>
                    <%= post.content %>
                  </p>
                </p>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>
<% end %>
